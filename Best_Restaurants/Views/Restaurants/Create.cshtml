@{
  Layout = "_Layout";
}

@model Best_Restaurants.Models.Restaurant
<h4>Add a new restaurant</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>
  

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")<br>

  @Html.LabelFor(model => model.City)
  @Html.TextBoxFor(model => model.City)<br>

  <input type="submit" value="Add new Restaurant"/>

}
